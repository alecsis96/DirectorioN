# Firebase Configuration (Required)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Maps API (Required for interactive maps)
# Get your API key at: https://console.cloud.google.com/
# Enable: Maps JavaScript API, Places API, Geocoding API
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your_google_maps_api_key

# Slack Webhook (Optional - for admin notifications)
# Get webhook URL at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Admin Configuration (Optional)
# Format: email1@domain.com,email2@domain.com
ADMIN_EMAILS=admin@example.com

# Deployment URL (Optional)
NEXT_PUBLIC_SITE_URL=https://directorio-1.vercel.app
